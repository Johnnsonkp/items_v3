<%= render 'items/showcase'%>
<section id="devise-form">

  <div class="container">
    <span class="form-header">
      <h2>Sign up</h2>
    </span>

    <span class="form-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field' %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'text-field' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'text-field' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'action-btn' %>
        </div>
      <% end %>
    </span>

      <%= render "devise/shared/links" %>
  </div>


</section>
